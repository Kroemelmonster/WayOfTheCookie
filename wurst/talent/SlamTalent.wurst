package SlamTalent

import initlater Talent
import initlater SlamAction
import initlater StackType
import UITooltip

public class SlamTalent extends Talent
    construct()
        super("Slam", SlamAction.ICON)

    static function setup() returns Talent
        return new SlamTalent()
        ..addGenerateListener() stack ->
            stack.addAction(new SlamAction(stack))

    override function createTooltip(StackType sType) returns Tooltip
        return SlamAction.createTooltip(true, 1)