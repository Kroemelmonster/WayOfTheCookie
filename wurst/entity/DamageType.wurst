package DamageType
import Tooltip
import StringUtils

public enum DamageType
    PHYISICAL
    MAGIC
    FIRE
    POISON

public class Resistance
    private int phyiscal = 0
    private int magic = 0
    private int fire = 0
    private int poison = 0

    function addRes(DamageType dType, int value)
        switch dType
            case MAGIC
                magic += value
            case FIRE
                fire += value
            case POISON
                poison += value
            default
                phyiscal += value
    
    function getRes(DamageType dType) returns int
        switch dType
            case MAGIC
                return magic
            case FIRE
                return fire
            case POISON
                return poison
            default
                return phyiscal

    function extendTooltip(Tooltip tt)
        tt.addLine("Physical Resistance : " + StringUtils.coloredPercent(phyiscal / 100))
        tt.addLine("Magic Resistance : " + StringUtils.coloredPercent(magic / 100))
        tt.addLine("Fire Resistance : " + StringUtils.coloredPercent(fire / 100))
        tt.addLine("Poison Resistance : " + StringUtils.coloredPercent(poison / 100))